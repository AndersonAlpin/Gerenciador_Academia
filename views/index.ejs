<%- include partials/header.ejs %>

<body>
  
    <div id="bg">
        <img src="../img/fundo.jpeg" alt="">
      </div>

  <section>
    <div class="container">
      <!-- CONTEÚDO LATERAL -->
      <div class="row">
        <div class="col-md-6 d-none d-md-block login-texto">
          <div class="text-center login-texto">
            <div class="jumbotron bg-light">
              <img class="logo-login" src="/img/logo-login.png">
              <hr>
              <p class="lead">
                Bem-vindo ao seu painel de controle administrativo!
              </p>
              <p class="lead">
                Gerêncie aqui os clientes, os pacotes promocionais e as mensalidades.
              </p>
            </div>
          </div>
        </div>
        <!-- FIM CONTEÚDO LATERAL -->

        <!-- FORMULÁRIO -->
        <div class="col-md-6">
          <div class="text-center">
            <div class="modal-dialog text-center">
              <div class="col-sm-10 main-section">
                <div class="modal-content">
                  <span class="h4 mb-4 text-light login-titulo">Login</span>

                  <form action="/autenticacao" method="POST" class="col-12">
                    <div class="form-group inputIcon" id="user-group">
                      <input id="email" type="email" name="email" class="form-control" placeholder="Email"
                        required>
                      <i class="fas fa-at fa-lg fa-fw" aria-hidden="true"></i>
                    </div>

                    <div class="form-group inputIcon" id="password-group">
                      <input id="senha" type="password" name="senha" class="form-control" placeholder="Senha" required>
                      <i class="fas fa-lock fa-lg fa-fw" aria-hidden="true"></i>
                    </div>

                    <div id="error" class="error" style="color: red;">
                      <%= messages.error %>
                    </div>

                    <div class="form-group">
                      <input type="submit" class="btn btn-primary btn-block btn-lg mt-4" value="Entrar">
                    </div>
                  </form>
                </div>
              </div>
            </div>

          </div>
        </div>
        <!-- FIM FORMULÁRIO -->

      </div>
    </div>
  </section>
<script>
  var mensagemEmail = document.getElementById("email");
  var mensagemSenha = document.getElementById("senha");

  mensagemEmail.addEventListener("focus", apagarMensagem, true);
  mensagemSenha.addEventListener("focus", apagarMensagem, true);

  function apagarMensagem(){
    document.getElementById("error").innerHTML = "";
  }
</script>
</body>
