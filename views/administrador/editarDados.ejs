<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>
<%- include ../partials/sidebar.ejs %>
<%- include ../partials/background.ejs %>

<body>
    <div class="main-content">
        <h2 class="titulos">Alteração de Dados</h2>
        <hr>
        <div class="formularios">
            <form method="POST" action="/administrador/dados/update">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputNome">Nome</label>
                        <input name="inputNome" value="<%= admin.nome %>" type="text" class="form-control"
                            id="inputNome" placeholder="Nome" required>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputSobrenome">Sobrenome</label>
                        <input name="inputSobrenome" value="<%= admin.sobrenome %>" type="text" class="form-control"
                            placeholder="Sobrenome" required>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="selectSexo">Sexo</label>
                        <select class="form-control" name="selectSexo" id="selectSexo">
                            <% if(admin.sexo === 'Masculino'){ %>
                            <option selected value="">Masculino</option>
                            <option value="">Feminino</option>
                            <% }else { %>
                                <option selected value="">Feminino</option>
                                <option value="">Masculino</option>
                            <% } %>
                        </select>
                        <input type="hidden" name="inputSexo" value="<%= admin.sexo %>" id="inputSexo" required>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputDate">Data de Nascimento</label>
                        <input name="inputDate" value="<%= admin.dataNascimento %>" type="date" class="form-control"
                            id="inputDate" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputCPF">CPF</label>
                        <input name="inputCPF" value="<%= admin.cpf %>" type="text" class="form-control" id="inputCPF"
                            required>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputTelefone">Telefone</label>
                        <input name="inputTelefone" value="<%= admin.telefone %>" type="text" class="form-control"
                            id="inputTelefone" placeholder="(99)9999-9999" required>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputEmail">Email</label>
                        <input name="inputEmail" value="<%= admin.email %>" type="email" class="form-control"
                            id="inputEmail" placeholder="example@email.com" required>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputCEP">CEP</label>
                        <input value="<%= admin.cep %>" type="text" class="form-control" name="inputCEP">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputLogradouro">Logradouro</label>
                        <input value="<%= admin.logradouro %>" type="text" class="form-control" name="inputLogradouro">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputCidade">Cidade</label>
                        <input value="<%= admin.cidade %>" type="text" class="form-control" name="inputCidade">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputBairro">Bairro</label>
                        <input value="<%= admin.bairro %>" type="text" class="form-control" name="inputBairro">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputNumero">Número</label>
                        <input value="<%= admin.numero %>" type="number" class="form-control" name="inputNumero">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputUF">UF</label>
                        <select class="form-control" name="" id="selectUF" required>
                            <option selected disabled value="">Selecione</option>
                            <option value="">AC</option>
                            <option value="">AL</option>
                            <option value="">AP</option>
                            <option value="">AM</option>
                            <option value="">BA</option>
                            <option value="">CE</option>
                            <option value="">DF</option>
                            <option value="">ES</option>
                            <option value="">GO</option>
                            <option value="">MA</option>
                            <option value="">MT</option>
                            <option value="">MS</option>
                            <option value="">MG</option>
                            <option value="">PA</option>
                            <option value="">PB</option>
                            <option value="">PR</option>
                            <option value="">PE</option>
                            <option value="">PI</option>
                            <option value="">RJ</option>
                            <option value="">RN</option>
                            <option value="">RS</option>
                            <option value="">RO</option>
                            <option value="">RR</option>
                            <option value="">SC</option>
                            <option value="">SP</option>
                            <option value="">SE</option>
                            <option value="">TO</option>
                        </select>
                        <input type="hidden" name="inputUF" id="inputUF" required>
                    </div>
                </div>
                <button class="btn btn-success">Atualizar</button>
            </form>
        </div>
    </div>
    <script>
        $('#inputCPF').mask("999.999.999-99", { placeholder: "000.000.000-00" });
        $('#inputTelefone').mask("(99)99999-9999", { placeholder: "(00)00000-0000" });
    </script>
</body>
<%- include ../partials/footer.ejs %>