<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>
<%- include ../partials/sidebar.ejs %>
<%- include ../partials/background.ejs %>

<body>
    <div class="main-content">
        <h2 class="titulos">Meus Dados</h2>
        <hr>
        <div class="formularios">
            <form method="POST" action="/administrador/dados/update">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputNome">Nome</label>
                        <input name="inputNome" value="<%= admin.nome %>" type="text" class="form-control"
                            id="inputNome" placeholder="Nome" disabled>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputSobrenome">Sobrenome</label>
                        <input name="inputSobrenome" value="<%= admin.sobrenome %>" type="text" class="form-control"
                            placeholder="Sobrenome" disabled>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputDate">Data de Nascimento</label>
                        <input name="inputDate" value="<%= admin.dataNascimento %>" type="date" class="form-control"
                            id="inputDate" disabled>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputCPF">CPF</label>
                        <input name="inputCPF" value="<%= admin.cpf %>" type="text" class="form-control" id="inputCPF"
                            disabled>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputTelefone">Telefone</label>
                        <input name="inputTelefone" value="<%= admin.telefone %>" type="text" class="form-control"
                            id="inputTelefone" placeholder="(99)9999-9999" disabled>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputEmail">Email</label>
                        <input name="inputEmail" value="<%= admin.email %>" type="email" class="form-control"
                            id="inputEmail" placeholder="example@email.com" disabled>
                    </div>
                </div>
                <a href="/administrador/editar/dados" class="btn btn-warning">Editar dados</a>
                <a href="/administrador/editar/senha/" class="btn btn-danger">Editar senha</a>
            </form>
        </div>
    </div>
</body>
<%- include ../partials/footer.ejs %>