<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>
<%- include ../partials/sidebar.ejs %>

<body>

    <!-- Área de Conteúdos -->
    <div class="main-content">
        <div class="container">
            <!-- JUMBOTRON -->
            <div id="jumbotron" class="jumbotron mb-1">
                <h1 class="display-3">Academia IronFit</h1>
                <hr>
                <P class="lead">
                    Bem-vindo ao seu painel de controle administrativo!
                </P>
                <p class="lead">
                    Gerêncie aqui os clientes, os pacotes promocionais e as mensalidades.
                </p>
            </div>

            <!-- CARDS -->
            <div class="row" id="cards">
                <div class="col-sm-6 col-md-4">
                    <div class="card card-colors">
                        <h4 class="card-header bg-dark"><a class="nav-link text-light"
                                href="/administrador/clientes/ativos">Clientes ativos</a></h4>
                        <div class="card-body text-center">
                            <span class="card-text display-4"><%= numClientes %></span>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-md-4">
                    <div class="card card-colors">
                        <h4 class="card-header bg-dark"><a class="nav-link text-light"
                                href="/administrador/mensalidades/atraso">Mensalidades atrasadas</a></h4>
                        <div class="card-body text-center">
                            <span class="card-text display-4"><%= numAtraso %></span>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-4">
                    <div class="card card-colors mb-4">
                        <h4 class="card-header bg-dark"><a class="nav-link text-light"
                                href="/administrador/mensalidades/pago">Entradas do mês</a></h4>
                        <div class="card-body text-center">
                            <% var real = totalEntradas.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %>

                            <span class="card-text display-4"><%= real %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include ../partials/footer.ejs %>