<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<body>
    <div class="main-content">
        <h2>Pacotes</h2>
        <a class="btn btn-info" href="/administrador/pacotes/cadastro">Adicionar pacote</a>
        <hr>
        <div class="table-responsive-sm table-bordered tabelas">
            <table class=" table">
                <thead class="table-dark">
                    <tr class="">
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Taxa de Desconto</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% pacotes.forEach(pacote => { %>
                    <tr class="tabelas-linhas">
                        <td> <%= pacote.nome %> </td>
                        <td> <%= pacote.descricao %> </td>
                        <td> <%= pacote.taxaDesconto %> </td>
                        <td>
                            <button class="btn btn-sm btn-warning">Editar</button>
                            <form class="inline" method="POST" action="/pacotes/delete">
                                <input type="hidden" name="id" value="<%= pacote.id %>">
                                <button class="btn btn-sm btn-danger">Deletar</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
</body>
<%- include ../../partials/footer.ejs %>