<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>
<%- include ../partials/sidebar.ejs %>

<body>
    <div class="main-content">
        <h2>Edição de Administrador</h2>
        <hr>
        <div class="formularios">
            <div class="form-row">
                <form action="/administrador/senha/update" method="POST">
                    <div class="form-group col-md-12">
                        <label for="inputSenhaAtual">Senha Atual</label>
                        <input name="senhaAtual" type="password" class="form-control" id="inputSenhaAtual">
                    </div>
                    <div class=" form-group col-md-12">
                        <label for="inputNovaSenha">Nova Senha</label>
                        <input name="novaSenha" type="password" class="form-control" id="inputNovaSenha">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputConfirmarNovaSenha">Confirmar Nova Senha</label>
                        <input name="confirmarNovaSenha" type="password" class="form-control" id="inputConfirmarNovaSenha">
                    </div>
                    <div id="error" class="error form-group col-md-12" style="color: red;">
                        <%= messages.error %>
                    </div>
                    <div class="form-group col-md-12">
                        <button class="btn btn-success">Atualizar</button>
                    </div>
                </form>
            </div>
        </div>
</body>
<%- include ../partials/footer.ejs %>