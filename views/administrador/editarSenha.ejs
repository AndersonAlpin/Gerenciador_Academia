<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>
<%- include ../partials/sidebar.ejs %>
<%- include ../partials/background.ejs %>

<body>
    <div class="main-content">
        <h2 class="titulos">Alteração de Senha</h2>
        <hr>
        <div class="formularios">
            <div class="form-row">
                <form action="/administrador/senha/update" method="POST">
                    <div class="form-group col-md-12">
                        <label for="inputSenhaAtual">Senha Atual</label>
                        <input placeholder="********" name="senhaAtual" type="password" class="form-control"
                            id="inputSenhaAtual" required>
                    </div>
                    <div class=" form-group col-md-12">
                        <label for="inputNovaSenha">Nova Senha</label>
                        <input placeholder="********" name="novaSenha" type="password" class="form-control"
                            id="inputNovaSenha" required>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputConfirmarNovaSenha">Confirmar Nova Senha</label>
                        <input placeholder="********" name="confirmarNovaSenha" type="password" class="form-control"
                            id="inputConfirmarNovaSenha" required>
                    </div>
                    <div class="form-group col-md-12" id="error" class="error" style="color: red;">
                        <%= messages.error %>
                    </div>
                    <div class="form-group col-md-12">
                        <button class="btn btn-success">Atualizar</button>
                    </div>
                </form>
            </div>
        </div>
</body>
<%- include ../partials/footer.ejs %>